div(
  flex,
  layout="row",
  layout-align="center start"
)
  div(
    flex-lg="25",
    flex-md="33",
    flex-sm="50",
    flex-xs="100",
    layout="column"
  )
    h1.md-display-1.text-center Change Profile

    md-card
      md-card-content
        form(
          name='form',
          ng-submit='vm.changeProfile(form)',
          novalidate='',
          layout="column"
        )
          md-input-container
            label Name

            input(
              type='text',
              name='name',
              ng-model='vm.user.name',
              mongoose-error='',
              required
            )

            div(ng-messages='form.name.$error')
              p(ng-message="required")
              p(ng-message="mongoose") {{ vm.errors.other }}

          md-card-actions
            button.md-button.md-primary(type='submit') Save changes
