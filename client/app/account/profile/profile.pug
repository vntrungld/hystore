div(
  flex,
  layout="row",
  layout-align="center center"
)
  div(
    flex,
    flex-sm="50",
    flex-md="33",
    flex-lg="25",
    layout="column"
  )
    md-card
      md-card-header
        md-card-header-text
          span.md-title.text-center Change Profile

      form(
        name='form',
        ng-submit='vm.changeProfile(form)',
        novalidate='',
      )
        md-card-content(layout="column")
          md-input-container
            label Name

            input(
              type='text',
              name='name',
              ng-model='vm.user.name',
              mongoose-error='',
              required
            )

            div(ng-messages='form.name.$error')
              p(ng-message="required")
              p(ng-message="mongoose") {{ vm.errors.other }}

        md-card-actions
          button.md-button.md-primary(type='submit') Save changes
