.container
  .row
    .col-sm-12
      h1 Change Profile
    .col-sm-12
      form.form(
        name='form',
        ng-submit='vm.changeProfile(form)',
        novalidate=''
      )
        .form-group
          label Name
          input.form-control(
            type='text',
            name='name',
            ng-model='vm.user.name',
            mongoose-error=''
          )
          p.help-block(ng-show='form.name.$error.mongoose')
            | {{ vm.errors.other }}

        p.help-block {{ vm.message }}

        button.btn.btn-lg.btn-primary(type='submit') Save changes

